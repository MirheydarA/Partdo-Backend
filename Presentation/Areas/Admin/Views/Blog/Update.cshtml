@using Business.ViewModels.Admin.Blog
@model BlogUpdateVM

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Update Blog</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="update" asp-controller="blog" method="post">
                <div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input class="form-control rounded-lg" asp-for="Title"></input>
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShortDesc"></label>
                        <input class="form-control rounded-lg" asp-for="ShortDesc"></input>
                        <span asp-validation-for="ShortDesc"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea class="form-control" asp-for="Description"> </textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tags"></label>
                        <input class="form-control rounded-lg " asp-for="Tags"></input>
                        <span asp-validation-for="Tags"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Author"></label>
                        <input class="form-control rounded-lg " asp-for="Author"></input>
                        <span asp-validation-for="Author"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input class="form-control imgInput" asp-for="Photo" />
                        <span asp-validation-for="Photo"></span>

                        <div id="imgPreview" class="mt-1"></div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Category"></label>
                        <textarea class="form-control" asp-for="Category"> </textarea>
                        <span asp-validation-for="Category"></span>
                    </div>
                </div>

                <div class="form-group w-100 mt-3">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
@section scripts{

    @await Html.PartialAsync("ImgUploadPartialjs")

    <script src="https://cdn.ckeditor.com/ckeditor5/38.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    </script>
}