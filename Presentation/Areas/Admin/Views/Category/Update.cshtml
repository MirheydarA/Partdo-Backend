@using Business.ViewModels.Admin.Category
@model CategoryUpdateVM

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Update Category</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="update" asp-controller="category" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name"></input>
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <div>
                        Current Cover Photo: <br />
                        <img src="~/Users/assets/images/@Model.CoverPhotoPath" />
                    </div>
                    <label asp-for="CoverPhoto"></label>
                    <input class="form-control imgInput" asp-for="CoverPhoto" />
                    <span asp-validation-for="CoverPhoto"></span>

                    <div id="imgPreview" class="mt-1"></div>
                </div>

                <button class="btn btn-primary" type="submit">Update</button>
            </form>
        </div>
    </div>

</div>


<!-- /.container-fluid -->
@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

        @await Html.PartialAsync("ImgUploadPartialjs")
}
