                                counter = counter + 1;
                                <li class="mb-5">
                                    <div class="flex ">
                                        <div class="img relative w-[30%] flex items-center ">
                                            <img src="~/Users/assets/images/@blog.Photo" alt="" class="w-[66px] h-[66px] rounded-full object-cover ">
