        $(document).on('click', '.decrease', function (e) {
            //e.preventDefault();
            var decreaseCount = $(this);

            var id = $(this).data('id');

            $.ajax({
                method: "GET",
                url: "/basket/decrease",
                data: {
                    id: id
                },
                success: function (res) {
                    var countElement = $(decreaseCount).parent().siblings().eq(3);
                    var count = parseInt(countElement.html());

                    if (count > 0) {
                        count--;
                        countElement.html(count);
                    }
